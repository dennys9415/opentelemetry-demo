{
  "name": "opentelemetry-demo",
  "version": "1.0.0",
  "description": "Distributed tracing demo application with OpenTelemetry",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd src/frontend && npm run dev",
    "dev:backend": "cd src/backend && python app.py",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd src/frontend && npm test",
    "test:backend": "cd src/backend && pytest",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd src/frontend && npm install",
    "build:backend": "cd src/backend && pip install -r requirements.txt",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "lint": "eslint src/frontend/**/*.js && flake8 src/backend/**/*.py"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "opentelemetry",
    "distributed-tracing",
    "observability",
    "microservices",
    "docker",
    "jaeger",
    "zipkin",
    "prometheus"
  ],
  "author": "Your Name",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/opentelemetry-demo.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}